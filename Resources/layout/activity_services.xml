<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView1"
        android:scrollbars="none">
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout1"
            android:paddingBottom="@dimen/abc_action_bar_default_height_material">

            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/toplayout"
                android:fadingEdge="none"
                android:textDirection="ltr"
                android:layoutDirection="ltr"
                android:layout_marginBottom="0.0dp"
                android:background="@mipmap/homebg2"
                android:layout_below="@id/containerscroll"
                android:paddingBottom="@dimen/abc_action_bar_overflow_padding_end_material">
                <TextView
                    android:text="@string/home_top_title"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/texttop"
                    android:textColor="@android:color/background_dark"
                    android:fadeScrollbars="true"
                    android:typeface="serif"
                    android:textDirection="ltr"
                    android:layout_gravity="center"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/abc_action_bar_content_inset_material"
                    android:textStyle="bold"
                    android:textSize="@dimen/abc_action_button_min_width_material" />
            </LinearLayout>
            <Space
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/hometopspace"
                android:layout_below="@id/toplayout"
                android:importantForAutofill="yes"
                android:background="@android:color/black"
                android:minHeight="@dimen/abc_action_bar_content_inset_material" />
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvhomeservicesp"
                android:text="@string/home_services_text2"
                android:textAlignment="center"
                android:justificationMode="inter_word"
                android:layout_below="@id/hometopspace"
                android:padding="@dimen/abc_action_bar_overflow_padding_end_material"
                android:background="@android:color/background_light" />
            <Space
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/servicesspaceone"
                android:importantForAutofill="yes"
                android:background="@android:color/black"
                android:minHeight="@dimen/abc_action_bar_content_inset_material"
                android:layout_below="@id/tvhomeservicesp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_below="@id/servicesspaceone"
                android:layout_width="fill_parent"
                android:id="@+id/linearLayout1"
                android:layout_margin="@dimen/abc_dialog_padding_material"
                android:background="@android:color/background_light"
                android:padding="@dimen/abc_action_bar_icon_vertical_padding_material"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/services_cat1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_dark" />
                <ImageView
                    android:src="@mipmap/ic_designweb"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView1"
                    android:contentDescription="@string/app_name" />
                <TextView
                    android:text="@string/services_cat1_details"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:textAlignment="center" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout2"
                android:layout_margin="@dimen/abc_dialog_padding_material"
                android:background="@android:color/background_light"
                android:padding="@dimen/abc_action_bar_icon_vertical_padding_material"
                android:layout_below="@id/linearLayout1">
                <TextView
                    android:text="@string/services_cat2"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView100"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_dark" />
                <ImageView
                    android:src="@mipmap/ic_developmentweb"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2"
                    android:contentDescription="@string/app_name" />
                <TextView
                    android:text="@string/services_cat2_details"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView101"
                    android:textAlignment="center" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_below="@id/linearLayout2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout3"
                android:layout_margin="@dimen/abc_dialog_padding_material"
                android:background="@android:color/background_light"
                android:padding="@dimen/abc_action_bar_icon_vertical_padding_material">
                <TextView
                    android:text="@string/services_cat3"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView103"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_dark" />
                <ImageView
                    android:src="@mipmap/ic_mobile"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView3"
                    android:contentDescription="@string/app_name" />
                <TextView
                    android:text="@string/services_cat3_details"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView102"
                    android:textAlignment="center" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_below="@id/linearLayout3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout4"
                android:layout_margin="@dimen/abc_dialog_padding_material"
                android:background="@android:color/background_light"
                android:padding="@dimen/abc_action_bar_icon_vertical_padding_material">
                <TextView
                    android:text="@string/services_cat4"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView104"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_dark" />
                <ImageView
                    android:src="@mipmap/ic_digitalmarketing"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView4"
                    android:contentDescription="@string/app_name" />
                <TextView
                    android:text="@string/services_cat4_details"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView105"
                    android:textAlignment="center" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_below="@id/linearLayout4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout5"
                android:layout_margin="@dimen/abc_dialog_padding_material"
                android:background="@android:color/background_light"
                android:padding="@dimen/abc_action_bar_icon_vertical_padding_material">
                <TextView
                    android:text="@string/services_cat5"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView106"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_dark" />
                <ImageView
                    android:src="@mipmap/ic_designgraphic"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView5"
                    android:contentDescription="@string/app_name" />
                <TextView
                    android:text="@string/services_cat5_details"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView107"
                    android:textAlignment="center" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_below="@id/linearLayout5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout6"
                android:layout_margin="@dimen/abc_dialog_padding_material"
                android:background="@android:color/background_light"
                android:padding="@dimen/abc_action_bar_icon_vertical_padding_material">
                <TextView
                    android:text="@string/services_cat6"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView109"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_dark" />
                <ImageView
                    android:src="@mipmap/ic_hostingdomains"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView6"
                    android:contentDescription="@string/app_name" />
                <TextView
                    android:text="@string/services_cat5_details"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView110"
                    android:textAlignment="center" />
            </LinearLayout>
           
          <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout7"
                android:layout_below="@id/linearLayout6"
                android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding_material"
                android:gravity="center">
                <TextView
                    android:text="@string/home_followusweb_title"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView111"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_dark"
                    android:includeFontPadding="false"
                    android:paddingVertical="@dimen/abc_action_bar_icon_vertical_padding_material"
                    android:layout_gravity="center"
                    android:padding="@dimen/abc_action_bar_elevation_material" />
                <ImageButton
                    android:src="@mipmap/ic_insta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton1"
                    android:contentDescription="@string/app_name"
                    android:cropToPadding="false"
                    android:layout_marginBottom="0.0dp"
                    android:background="@android:color/background_light"
                    android:layout_gravity="center" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton2"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/ic_whtsapp"
                    android:background="@android:color/background_light"
                    android:layout_gravity="center" />
                <ImageButton
                    android:src="@mipmap/ic_fb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton3"
                    android:contentDescription="@string/app_name"
                    android:background="@android:color/background_light"
                    android:layout_gravity="center" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton4"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/ic_twitter"
                    android:background="@android:color/background_light"
                    android:layout_gravity="center" />


            </LinearLayout>


        </RelativeLayout>
    </ScrollView>



    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        android:layout_alignParentBottom="true"
        app:menu="@menu/navigation" />

</RelativeLayout>
